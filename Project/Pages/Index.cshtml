@page

@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer Localizer

@model PresentationLayer.Models.View.LoginViewModel
@{
    ViewData["Title"] = "Index";
}

@if (User.Identity.IsAuthenticated)
{
    <meta http-equiv="refresh" content="0; url=https://localhost:7145/Admin" />
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Планувальник зустрічей</title>
    <link rel="stylesheet" href="~/css/Style1.css" />
</head>

<body>

    <header>
        <h2 class="logo">Logo</h2>
        <nav class="navigation">
            <a href="#">Home</a>
            <a href="#">About</a>
            <a href="#">Meeting rooms</a>
            <a href="#">Contact</a>
            <button class="btnLogin-popup">Login</button>
        </nav>
    </header>

    <div class="wrapper">
        <span class="icon-close"><ion-icon name="close-outline"></ion-icon></span>

        <div class="form-box login">
            <h2>Login</h2>
            <form method="post" asp-route="Login">
                    <div class="input-box">
                        <span class="icon"><ion-icon name="person-outline"></ion-icon></span>
                        <input asp-for="Login" type="text" required />
                        <label>Login</label>
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="icon"><ion-icon name="lock-closed-outline"></ion-icon></span>
                        <input asp-for="Password" type="password" required />
                        <label>Password</label>
                    </div>
                    <button type="submit" class="btn">Login</button>
                    <div class="login-register">
                    <p>Dont have an account?<a href="./Register" class="register-link"> Register</a></p>
                    </div>
            </form>
        </div>
    </div>

    <script src="~/js/Script1.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>