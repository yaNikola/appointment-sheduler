@page
@model PresentationLayer.Models.View.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Планувальник зустрічей</title>
    <link rel="stylesheet" href="~/css/StyleRegister.css" />
</head>

<body>

    <header>
        <h2 class="logo">Logo</h2>
        <nav class="navigation">
            <a href="#">Home</a>
            <a href="#">About</a>
            <a href="#">Services</a>
            <a href="#">Contact</a>
            <button class="btnLogin-popup">Login</button>
        </nav>
    </header>

    <div class="wrapper">
        <span class="icon-close"><ion-icon name="close-outline"></ion-icon></span>

        <div class="form-box register">
            <h2>Registration</h2>
            <div asp-validation-summary="All"></div>
            <form method="post" asp-route="Register">
                <div class="input-box">
                    <input asp-for="Name" type="text" required />
                    <label>Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input asp-for="Surname" type="text" required />
                    <label>Surname</label>
                </div>
                <div class="input-box">
                    <input asp-for="Email" type="email" required />
                    <label>Email</label>
                </div>
                <div class="input-box">
                    <input asp-for="Login" type="text" required />
                    <label>Login</label>
                </div>
                <div class="input-box">
                    <input asp-for="Password" type="password" required />
                    <label>Password</label>
                </div>
                <div class="input-box">
                    <input asp-for="PasswordConfirm" type="password" required />
                    <label>Confirm Password</label>
                </div>
                <button type="submit" class="btn">Register</button>
                <div class="login-register">
                    <p>Already have an account?<a href="./Index" class="login-link"> Login</a></p>
                </div>
            </form>
        </div>
    </div>

    <script src="~/js/ScriptRegister.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>
